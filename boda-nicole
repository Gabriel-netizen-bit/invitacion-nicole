  <script>
    /***********************
     * EDITA SOLO ESTO üëá  *
     ***********************/
    const DATA = {
      nombres: "Nicole & Pedro",
      heroLine: "Acomp√°√±anos a celebrar este d√≠a tan especial.",
      // PON AQU√ç LA FECHA/HORA REAL (CR -06:00). Ej: "2026-08-22T16:00:00-06:00"
      fechaEventoISO: "2026-08-22T16:00:00-06:00",
      whatsappDestino: "50670992183"
    };

    // M√∫sica YouTube: tu link rbaoKL1Ei0c
    // OJO: t√∫ escribiste "127 al 42", pero eso no tiene sentido.
    // Yo lo dejo en 17 -> 42 como ella pidi√≥ antes. Si de verdad es 127 -> 142, cambia aqu√≠:
    const YT_SEGMENT = { videoId: "rbaoKL1Ei0c", start: 17, end: 42 };
    /***********************/

    // UI text
    document.getElementById("names").textContent = DATA.nombres;
    document.getElementById("heroLine").textContent = DATA.heroLine;

    // Date text
    const eventDate = new Date(DATA.fechaEventoISO);
    const cap = (s) => s.charAt(0).toUpperCase() + s.slice(1);
    const fmt = new Intl.DateTimeFormat("es-CR", { weekday:"long", year:"numeric", month:"long", day:"numeric" });
    const tmt = new Intl.DateTimeFormat("es-CR", { hour:"numeric", minute:"2-digit" });
    document.getElementById("eventDateText").textContent = `${cap(fmt.format(eventDate))} ¬∑ ${tmt.format(eventDate)}`;

    /***********************
     * RSVP -> WhatsApp     *
     ***********************/
    function getAsisteValue(){
      const checked = document.querySelector('input[name="asiste"]:checked');
      return checked ? checked.value : "S√≠, confirmo";
    }

    function buildWhatsAppMessage(){
      const nombre = (document.getElementById("rsvpName").value || "").trim();
      const nota = (document.getElementById("rsvpNote").value || "").trim();
      const asiste = getAsisteValue();

      const fechaTxt = `${cap(fmt.format(eventDate))} ¬∑ ${tmt.format(eventDate)}`;

      let msg = `*Confirmaci√≥n de asistencia*\n`;
      msg += `‚Ä¢ Asistencia: *${asiste}*\n`;
      msg += `‚Ä¢ Nombre: *${nombre || "An√≥nimo"}*\n`;
      msg += `‚Ä¢ Evento: ${DATA.nombres}\n`;
      msg += `‚Ä¢ Fecha: ${fechaTxt}\n`;
      if (nota) msg += `‚Ä¢ Nota: ${nota}\n`;

      return msg;
    }

    document.getElementById("sendWhatsBtn").addEventListener("click", () => {
      const number = (DATA.whatsappDestino || "").trim();
      if (!number || number === "50600000000"){
        alert("Falta configurar el n√∫mero de WhatsApp (whatsappDestino) en DATA.");
        return;
      }
      const msg = buildWhatsAppMessage();
      const url = `https://wa.me/${encodeURIComponent(number)}?text=${encodeURIComponent(msg)}`;
      window.open(url, "_blank", "noopener");
    });

    document.getElementById("clearBtn").addEventListener("click", () => {
      document.getElementById("rsvpName").value = "";
      document.getElementById("rsvpNote").value = "";
    });

    /***********************
     * M√∫sica YouTube API   *
     ***********************/
    let player = null;
    let isPlaying = false;

    const musicBtn = document.getElementById("musicBtn");
    const musicState = document.getElementById("musicState");
    const dot = document.getElementById("dot");
    const musicStartBtn = document.getElementById("musicStartBtn");

    const tag = document.createElement("script");
    tag.src = "https://www.youtube.com/iframe_api";
    document.head.appendChild(tag);

    window.onYouTubeIframeAPIReady = function(){
      player = new YT.Player("player", {
        height:"1", width:"1",
        videoId: YT_SEGMENT.videoId,
        playerVars: { autoplay:0, controls:0, disablekb:1, fs:0, modestbranding:1, rel:0, start: YT_SEGMENT.start }
      });

      // Loop del segmento
      setInterval(() => {
        if(!player || !isPlaying) return;
        const t = player.getCurrentTime ? player.getCurrentTime() : 0;
        if (t >= YT_SEGMENT.end - 0.15){
          player.seekTo(YT_SEGMENT.start, true);
          player.playVideo();
        }
      }, 200);
    };

    function setMusicUI(on){
      isPlaying = on;
      musicState.textContent = on ? "ON" : "OFF";
      musicState.style.color = on ? "#0f7a3a" : "var(--muted)";
      dot.style.background = on ? "#0f7a3a" : "var(--accent)";
    }

    function playMusic(){
      if(!player) return;
      player.seekTo(YT_SEGMENT.start, true);
      player.playVideo();
      setMusicUI(true);
    }
    function pauseMusic(){
      if(!player) return;
      player.pauseVideo();
      setMusicUI(false);
    }

    musicBtn.addEventListener("click", () => {
      if(!player) return;
      if(!isPlaying) playMusic();
      else pauseMusic();
    });

    musicStartBtn.addEventListener("click", () => playMusic());
  </script>
